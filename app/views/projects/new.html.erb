<h1>New Project</h1>

<%= link_to 'Back', projects_path %>

<%= form_for :project, url: projects_path do |f| %>

  <% if @project && @project.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@project.errors.count, 'error') %> prohibited
        this project from being saved:
      </h2>
      <ul>
        <% @project.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
  Using a group or username will cause all repositories of that name to be imported from GitHub.
  </p>

  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :rule_sets %><br>
    <%= f.text_area :rule_sets, :value => '["vulns","sensitive"]' %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
